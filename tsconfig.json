{
  "extends": [
    "@sapphire/ts-config",
    "@sapphire/ts-config/decorators",
    "@sapphire/ts-config/extra-strict",
    "@sapphire/ts-config/bundler",
    "@sapphire/ts-config/verbatim"
  ],
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"]
    }
  }
}
