{
  "extends": [
    "@sapphire/ts-config",
    "@sapphire/ts-config/decorators",
    "@sapphire/ts-config/extra-strict"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "outDir": "../dist",
    "baseUrl": "src/",
    "paths": {
      "#classes/*": ["lib/classes/*"],
      "#api/*": ["lib/api/*"],
      "#types/*": ["lib/types/*"]
    },
    "composite": true
  }
}
