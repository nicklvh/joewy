// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id         String   @id
  modlogId   String?
  welcomeId  String?
  auditlogId String?
  modlogs    Modlog[]
  members    Member[]
}

model Member {
  id      String   @id
  coins   Int?
  xp      Int?
  level   Int?
  Guild   Guild    @relation(fields: [guildId], references: [id])
  guildId String
  modlogs Modlog[]
}

model Modlog {
  id          Int            @id @default(autoincrement())
  memberId    String
  moderatorId String
  reason      String
  type        ModerationType
  createdAt   DateTime       @default(now())
  Guild       Guild          @relation(fields: [guildId], references: [id])
  guildId     String
  Member      Member         @relation(fields: [memberId], references: [id])
}

enum ModerationType {
  BAN
  KICK
  WARN
  MUTE
}
